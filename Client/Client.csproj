<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net5.0-windows</TargetFramework>

        <LangVersion>preview</LangVersion>
        <Nullable>enable</Nullable>
        <NullableContextOptions>enable</NullableContextOptions>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <UseWPF>true</UseWPF>

        <OutputType>Exe</OutputType>
        <OutputPath>$(SolutionDir)bin</OutputPath>
        <RootNamespace>SKHEIJO</RootNamespace>

        <!-- <TrimMode>Link</TrimMode> -->
        <Deterministic>true</Deterministic>
        <PublishTrimmed>true</PublishTrimmed>
        <AutoGenerateBindingRedirects>false</AutoGenerateBindingRedirects>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
        <GenerateSerializationAssemblies>Auto</GenerateSerializationAssemblies>
        <DisableWinExeOutputInference>true</DisableWinExeOutputInference>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>

        <Authors>unknown6656</Authors>
        <Company>unknown6656</Company>
        <Product>SKHEIJO by Unknown6656</Product>
        <Copyright>Copyright Â© 2021 - $([System.DateTime]::Today.ToString(yyyy)), unknown6656</Copyright>
        <ApplicationManifest>app.manifest</ApplicationManifest>
    </PropertyGroup>
    <ItemGroup>
      <None Remove="default.dat" />
      <None Remove="splash-screen.png" />
      <None Remove="user.dat" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="default.dat">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="user.dat">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Unknown6656.Core" Version="1.0.21" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Server\Server.csproj" />
    </ItemGroup>
    <ItemGroup>
      <SplashScreen Include="assets\splash-screen.png">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </SplashScreen>
    </ItemGroup>
</Project>